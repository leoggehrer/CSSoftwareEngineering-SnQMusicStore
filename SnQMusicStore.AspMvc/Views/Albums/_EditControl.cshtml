@{
    @using SnQMusicStore.AspMvc.Models.Modules.View
    @using SnQMusicStore.AspMvc.Modules.View
    @model EditViewModel

    var viewBagInfo = Model.ViewBagInfo;
    var property = viewBagInfo.DisplayProperty;

    if (property != null && property.Name.Equals("ArtistId"))
    {
        @if (Model.DisplayModel is SnQMusicStore.AspMvc.Models.Persistence.App.Album album)
        {
            @Html.DropDownList("ArtistId", new SelectList(album.Artists, "Id", "Name"), null, new { @class = "form-control", style = "min-width: 400px;" })
        }
        Model.ViewBagInfo.Handled = true;
    }
    else
    {
        @await Html.PartialAsync("../Shared/_EditControl", Model)
    }
}
