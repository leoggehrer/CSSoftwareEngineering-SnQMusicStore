@*@Customized*@
@*#if ACCOUNT_ON*@
@{
    @using SnQMusicStore.AspMvc.Modules.Session
    @using SnQMusicStore.AspMvc.Modules.Language

    var sessionWrapper = new SessionWrapper(Context.Session);
    Func<string, string> translate = Translator.TranslateIt;
    Func<string, string> translateFor = pn => translate($"PortalMenu.{pn}");

    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@translateFor("Home")</a>
        </li>
        @if (sessionWrapper.LoginSession != null)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Genres" asp-action="Index">@translateFor("Genres")</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Artists" asp-action="Index">@translateFor("Artists")</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Albums" asp-action="Index">@translateFor("Albums")</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Tracks" asp-action="Index">@translateFor("Tracks")</a>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">@translateFor("Contact")</a>
        </li>
    </ul>
}
@*#endif*@
